{
  "compilerOptions": {
    "outDir": "./dist", 
    "module": "commonjs", 
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "./assets", "./style.css"],
  "exclude": ["node_modules"]
}